<?xml version="1.0" encoding="UTF-8"?>

<project
	name="project-builder"
	default= "test"
	basedir=".">

	<property name="test.filename" value="tests/" />
	
	<target name="test">
		<exec executable="./phpunit">
			<arg value="--log-junit"/>
			<arg value="result.xml"/>
			<arg value="${test.filename}"/>
		</exec>
	</target>
</project>
